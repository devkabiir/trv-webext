{
  "extends": [
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "rules": {
    "linebreak-style": [
      true,
      "LF"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "max-line-length": [
      true,
      120
    ],
    "semicolon": [
      true,
      "always"
    ],
    "space-before-function-paren": false,
    "trailing-comma": true
  },
  "defaultSeverity": "warning"
}